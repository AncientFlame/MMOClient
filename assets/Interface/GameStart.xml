<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    
<useStyles filename="nifty-default-styles.xml"/>
<useControls filename="nifty-default-controls.xml"/>

    

<screen controller="mygame.StartGUIController" id="start">
    <layer childLayout="absolute" id="layer2">
      <image filename="Interface/SplashScreen.jpg" height="598px" id="image0" width="796px" x="1" y="1"/>
    </layer>
     <layer childLayout="absolute" id="layer">
            
        <panel align="center" backgroundColor="#FF3300" childLayout="absolute" height="274px" id="panel" style="nifty-panel-red" valign="center" width="402px" x="201" y="150">       
        <control childLayout="center" id="button1" label="Start" name="button" x="133" y="58">
            <interact onClick="startGame()"/>
        </control>
        <control childLayout="center" id="button2" label="Option" name="button" x="133" y="105">
        </control>
        <control childLayout="center" id="button3" label="Quit" name="button" x="134" y="151">
            <interact onClick="quitGame()"/>
        </control>
        </panel>
      
    </layer>
    
  </screen>
</nifty>
