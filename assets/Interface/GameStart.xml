<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    
<useStyles filename="nifty-default-styles.xml" />
<useControls filename="nifty-default-controls.xml" />

    <screen id="start" controller="mygame.StartGUIController">
        <layer id="layer" backgroundColor="#003f" childLayout="center">
            <panel id="panel" style="nifty-panel-red"  backgroundColor="#FF3300" height="50%" width="50%" align="center" valign="center" childLayout="center" >  
                <panel id="panel_bottom_left"  height="50%" width="50%" align="right" valign="center" childLayout="center" >  
                  <panel id="panel_start" height="50%" width="50%" align="center" valign="center" childLayout="center" >  
                    <control name="button" label="Start" id="StartButton" align="right" valign="center" visibleToMouse="true"> 
                    <interact onClick="startGame()" />
                  </control>
                  </panel>
                </panel>
                <panel id="panel_bottom_right" height="50%" width="50%" align="left" valign="center" childLayout="center" >  
                  <panel id="panel_quit" height="50%" width="50%" align="center" valign="center" childLayout="center" >  
                    <control name="button" label="Quit" id="QuitButton" align="left" valign="center" visibleToMouse="true"> 
                      <interact onClick="quitGame()" />
                    </control>
                  </panel>
                </panel>
             </panel>
        </layer>
    </screen>
</nifty>
